# ==== Core security ====
SECRET_KEY=change-me-in-production
DEBUG=False

# Comma-separated list, e.g. "example.com,www.example.com"
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://example.com,https://www.example.com
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self'
CSP_STYLE_SRC='self'
CSP_IMG_SRC='self' data:
CSP_FONT_SRC='self' data:
CSP_CONNECT_SRC='self' https://api.example.com
CSP_FRAME_ANCESTORS='none'
PERMISSIONS_POLICY=camera=(), microphone=(), geolocation=()
CROSS_ORIGIN_OPENER_POLICY=same-origin
CROSS_ORIGIN_EMBEDDER_POLICY=require-corp
CROSS_ORIGIN_RESOURCE_POLICY=same-origin

# Base URL used in emails/links
BASE_URL=https://example.com


# ==== Database ====
# If set, PostgreSQL is used; if not set, falls back to SQLite (db.sqlite3)
# Example: postgres://USER:PASSWORD@HOST:PORT/NAME
DATABASE_URL=postgres://postgres:postgres@localhost:5432/zamio


# ==== CORS ====
# Only used when DEBUG=False; when DEBUG=True, all origins are allowed
CORS_ALLOWED_ORIGINS=https://example.com,https://www.example.com


# ==== Redis / Celery / Channels ====
# Used for Celery broker + result backend, and Django Channels layer
REDIS_URL=redis://localhost:6379/0


# ==== Email ====
# Local development default is file-based backend writing to sent_emails/
# For production, set SMTP values and switch backend accordingly.
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-key
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=ZamIO <no-reply@example.com>

# Where file-based backend writes emails in development
EMAIL_FILE_PATH=sent_emails


