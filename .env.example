# =============================
# Core Django configuration
# =============================
SECRET_KEY=replace-with-secure-random-string
DEBUG=False
BASE_URL=http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000

# =============================
# Database (PostgreSQL)
# =============================
POSTGRES_DB=zamio
POSTGRES_USER=zamio
POSTGRES_PASSWORD=zamio
DATABASE_URL=postgresql://zamio:zamio@postgres:5432/zamio
DB_CONN_MAX_AGE=600

# Optional read replica
# DATABASE_READ_URL=postgresql://reader:reader@postgres-read:5432/zamio

# =============================
# Redis / Celery
# =============================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_PREFETCH_MULTIPLIER=1
CELERY_WORKER_CONCURRENCY=4
CELERY_MAX_TASKS_PER_CHILD=1000

# =============================
# Email (override when using SMTP)
# =============================
EMAIL_BACKEND=django.core.mail.backends.filebased.EmailBackend
EMAIL_FILE_PATH=sent_emails
# EMAIL_HOST=smtp.example.com
# EMAIL_HOST_USER=no-reply@example.com
# EMAIL_HOST_PASSWORD=super-secret
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=Zamio <no-reply@example.com>

# =============================
# Security headers
# =============================
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# =============================
# Authentication / SPA origins
# =============================
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
FRONTEND_APP_URL=http://localhost:5173
STATION_APP_URL=http://localhost:5174
PUBLISHER_APP_URL=http://localhost:5175
ADMIN_APP_URL=http://localhost:5176

# =============================
# Frontend settings
# =============================
VITE_API_URL=http://backend:8000

# =============================
# Third-party integrations (optional)
# =============================
